Configuration:
  Appenders:
    Console:
      name: Console
      target: SYSTEM_OUT
      PatternLayout:
        pattern: "[%t] %-5level %logger{36} - %msg%n"
    File:
      name: File
      FileName: application.log
      PatternLayout:
        pattern: "%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"
  Loggers:
    Console:
      name: Console
      level: info
      appenderRef:
        - ref: Console
    File:
      name: File
      level: info
      appenderRef:
        - ref: File
  Root:
    level: error
    appenderRef:
      - ref: Console

